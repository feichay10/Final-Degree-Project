// Zona directa nombre -> IP
zone "cazg.es" {
    type master;
    file "/etc/bind/zones/db.cazg.es";
    allow-transfer { 192.168.1.134; };  // ns2 IP privada 
};

// Zona inversa IP -> nombre
zone "1.168.192.in-addr.arpa" {
    type master;
    file "/etc/bind/zones/db.192.168.1"; // subred 192.168.1.0/28
    allow-transfer { 192.168.1.134; };  // ns2 IP privada
}; 